@model Profile

@{
    ViewData["Title"] = "profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <!-- Profilbild -->
            <img src="@Model.ProfileImg" alt="Profile Image" class="img-fluid rounded-circle">
        </div>
        <div class="col-md-6">
            <!-- Användarinformation -->
            <h2>@Model.Name</h2>
            <p>@Model.Information</p>
            <p>
                @if (Model.PrivateProfile)
                {
                    <span class="badge badge-warning">Privat profil</span>
                }
                else
                {
                    <span class="badge badge-success">Publik profil</span>
                }
            </p>
        </div>
        <div class="col-md-3">
            <!-- Återuppta (CV) -->
            <h5>CV</h5>
            <p>@Model.Resume år erfarenhet</p>
        </div>
    </div>
</div>


<a asp-action="EditProfile" asp-controller="Account">Redigera profil</a>

@if (User.Identity.IsAuthenticated)
{
    <h1>Här är din profil, @User.Identity.Name</h1>
}

@if (!User.Identity.IsAuthenticated)
{
    <h1>Ingen användare inloggad</h1>
}

