@model EditProfileViewModel

<div class="card mt-4">
    <div class="card-header">
        <h5 class="card-title">Redigera profil</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditProfile" method="post">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Förnamn</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Efternamn</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="PrivateProfile" class="form-check-label">Privat profil</label>
                <input asp-for="PrivateProfile" class="form-check-input" type="checkbox" />
            </div>
            <div class="mb-3">
                <label asp-for="Information" class="form-label">Information</label>
                <textarea asp-for="Information" class="form-control" rows="4"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="ProfileImg" class="form-label">Profilbild</label>
                <input asp-for="ProfileImg" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Resume" class="form-label">Sammanfattning</label>
                <textarea asp-for="Resume" class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Spara ändringar</button>
        </form>
    </div>
</div>
