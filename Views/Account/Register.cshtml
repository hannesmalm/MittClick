@model RegisterViewModel

<body>
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-9 col-lg-6">
				<div class="card">
					<div class="card-header text-center">
						<h4>Registrera nytt konto</h4>
					</div>
					<div class="card-body">

						<form method="post" asp-action="Register">

							<div class="form-floating mt-3">
								<input type="text" asp-for="UserName" id="username" class="form-control" placeholder="Input username here" />
								<label for="username" class="form-label">Välj ditt användarnamn</label>
								<span asp-validation-for="UserName" class="text-danger"></span>
							</div>

							<div class="form-floating mt-2">
								<input type="text" asp-for="Password" id="password" type="password" class="form-control" placeholder="Input password here" />
									<label for="password" class="form-label">Välj lösenord</label>
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>

							<div class="form-floating mt-2">
								<input type="text" asp-for="RepeatPassword" id="repeatpassword" type="password" class="form-control" placeholder="Repeat password here" />
								<label for="repeatpassword" class="form-label">Upprepa lösenord</label>
								<span asp-validation-for="RepeatPassword" class="text-danger"></span>
							</div>

							<div asp-validation-summary="All" class="text-danger"></div>
							<div class="form-group text-center">
								<button type="submit" class="btn btn-primary btn-block mt-2">Skapa konto</button>
							</div>

						</form>
						<br />
						Har du redan konto?
						<a asp-action="Login" asp-controller="Account"> Logga in här</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>