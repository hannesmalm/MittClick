@model MittClick.Models.ViewModels.ChangePasswordViewModel

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="row d-flex justify-content-between">
                            <div class="col col-2">
                                <button class="btn btn-outline-secondary" onclick="history.back()">Tillbaka</button>
                            </div>
                            <div class="col col-8 text-center">
                                <h4>Ändra lösenord</h4>
                            </div>
                            <div class="col col-2">
                                <!-- låt vara, balanserar spacet i headern mot knappen -->
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-floating mb-2">
                                <input asp-for="CurrentPassword" class="form-control" id="currentPassword" placeholder=" " required>
                                <label for="currentPassword">Nuvarande Lösenord</label>
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-2">
                                <input asp-for="NewPassword" class="form-control" id="newPassword" placeholder=" " required>
                                <label for="newPassword">Nytt Lösenord</label>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <!-- By default, Identity requires that passwords contain an uppercase character,
                                lowercase character, a digit, and a non-alphanumeric character. Passwords must be
                                at least six characters long. -->

                            <div class="form-floating mb-2">
                                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder=" " required>
                                <label for="confirmPassword">Bekräfta Lösenord</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center mt-2">
                                <button type="submit" class="btn btn-primary w-100">Spara</button>
                        </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>