@model LoginViewModel

<body>
	<div class="container mt-5">
		<div class="row justify-content-center">
				<div class="col-md-9 col-lg-6">
					<div class="card">
						<div class="card-header text-center">
							<h4>Logga in</h4>
						</div>
						<div class="card-body">
							<form method="post" asp-action="LogIn">
								<div asp-validation-summary="All" class="text-danger"></div>
								<div class="form-floating">
									<input type="text" asp-for="UserName" id="username" class="form-control" placeholder="Input username here"/>
									<label for="username" class="form-label">Användarnamn</label>
									<span asp-validation-for="UserName" class="text-danger"></span>
								</div>
								<div class="form-floating">
								<input type="text" asp-for="Password" id="password" type="password" class="form-control" placeholder="Input password here" />
									<label for="password" class="form-label">Lösenord</label>
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
								<div class="form-group mt-1">
									<div class="custom-control custom-checkbox">
										<input type="checkbox" asp-for="RememberMe" class="custom-control-input" id="rememberMeCheck">
										<label class="custom-control-label" for="rememberMeCheck">Kom ihåg mig</label>
									</div>
								</div>
								<div class="form-group text-center">
									<button type="submit" class="btn btn-primary btn-block mt-2">Logga in</button>
								</div>
							</form>
							<br />
							Ny på MittClick?
							<a asp-action ="Register" asp-controller="Account"> Registrera dig här</a>
						</div>
					</div>
				</div>
			</div>
		</div>
</body>