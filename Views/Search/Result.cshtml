@model List<Profile>

<div class="container">
    <div class="row my-4">
        <div class="col">
            @{
                // Tar söksträngen från URLen
                var searchQuery = Context.Request.Query["query"];
            }
            <input value="@searchQuery" type="text" id="searchBox" placeholder="Sök profiler" onkeyup="searchProfiles()" />
        </div>
    </div>

    <script>
        $(document).ready(function () {
            onPageLoad();
        });

        function onPageLoad() {
            searchProfiles();
        }

        function searchProfiles() {
            var searchValue = $('#searchBox').val();
            $.ajax({
                url: searchValue ? '@Url.Action("SearchProfiles", "Search")' : '@Url.Action("SearchEmpty", "Search")',
                type: 'GET',
                data: { searchTerm: searchValue },
                success: function (data) {
                    if (data) {
                        $('#profilesList').html(data);
                    } else {
                        $('#profilesList').empty();
                    }
                }
            });
        }
    </script>

    <div id="profilesList">
		@Html.Partial("SearchProfile", Model)
    </div>
