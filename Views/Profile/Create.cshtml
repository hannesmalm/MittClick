@model CreateProfileViewModel
@{
    ViewData["Title"] = "Create Profile";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-9 col-lg-6">
			<div class="card">
				<div class="card-header text-center">
					<h4>Skapa din Profil</h4>
				</div>
				<div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PrivateProfile"></label>
                            <input asp-for="PrivateProfile" type="checkbox" />
                            <span asp-validation-for="PrivateProfile" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Information"></label>
                            <input asp-for="Information" class="form-control" />
                            <span asp-validation-for="Information" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ProfileImg"></label>
                            <input asp-for="ProfileImg" class="form-control" />
                            <span asp-validation-for="ProfileImg" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Resume"></label>
                            <input asp-for="Resume" class="form-control" />
                            <span asp-validation-for="Resume" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Create Profile</button>
                    </form>
				</div>
			</div>
		</div>
	</div>
</div>
