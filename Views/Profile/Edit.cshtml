@model MittClick.Models.ViewModels.EditProfileViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <div class="row d-flex justify-content-between">
                        <div class="col col-2">
                            <button class="btn btn-outline-secondary" onclick="history.back()">Tillbaka</button>
                        </div>
                        <div class="col col-8 text-center">
                            <h4>Redigera profil</h4>
                        </div>
                        <div class="col col-2">
                            <!-- låt vara, balanserar spacet i headern mot knappen -->
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <form asp-action="Edit" asp-controller="Profile" method="post" enctype="multipart/form-data">

                        <!--Förnamn-->
                        <div class="form-floating">
                            <input type="text" asp-for="FirstName" id="Firstname" class="form-control" placeholder="Input Firstname here" />
                            <label for="Firstname" class="form-label">Förnamn</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!--Efternamn-->
                        <div class="form-floating mt-2">
                            <input type="text" asp-for="LastName" id="Lastname" class="form-control" placeholder="Input Lastname here" />
                            <label for="Lastname" class="form-label">Efternamn</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!--Kontaktuppgifter-->
                        <div class="form-floating mt-4">
                            <h6>Kontaktuppgifter</h6>
                            <div class="input-group">
                                <div class="dropdown">
                                    <button class="btn btn-outline-primary dropdown-toggle" type="button" id="contactDropDown" data-bs-toggle="dropdown" aria-expanded="false">
                                        Välj kontakttyp
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#" data-value="Email">Email</a>
                                        <a class="dropdown-item" href="#" data-value="Telefon">Telefon</a>
                                        <a class="dropdown-item" href="#" data-value="Annat">Annat</a>
                                    </div>
                                </div>
                                <input type="text" class="form-control" id="contactInput" placeholder="Enter contact">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" id="addCButton">Lägg till</button>
                                </div>
                            </div>
                            <ul class="list-group mt-2" id="contactinfo">
                                @if (Model.ContactInfos != null && Model.ContactInfos.Any())
                                {
                                    var contactIndex = 0; // Lägg till en räknare för att hålla reda på index
                                    foreach (var contactInfo in Model.ContactInfos)
                                    {
                                        <li class="list-group-item list-group-item-primary">
                                            @contactInfo.Type: @contactInfo.Info
                                            <button class="btn btn-outline-danger btn-sm float-end" onclick="removeContact(this)">Ta bort</button>
                                            <input type="hidden" name="ContactInfos[@contactIndex].Type" value="@contactInfo.Type" />
                                            <input type="hidden" name="ContactInfos[@contactIndex].Info" value="@contactInfo.Info" />
                                        </li>
                                        contactIndex++;
                                    }
                                }

                            </ul>
                            <script>
                                document.addEventListener('DOMContentLoaded', function () {
                                    var contactIndex = 0; // Set start index based on the number of existing contact information
                                    var addCButton = document.getElementById('addCButton');
                                    var cInputField = document.getElementById('contactInput');
                                    var contactinfo = document.getElementById('contactinfo');
                                    var contactDropDown = document.getElementById('contactDropDown');

                                    var selectedContactType = '';

                                    var dropdownItems = document.querySelectorAll('.dropdown-item');
                                    dropdownItems.forEach(function (item) {
                                        item.addEventListener('click', function () {
                                            selectedContactType = item.getAttribute('data-value');
                                            contactDropDown.textContent = selectedContactType;
                                        });
                                    });

                                    addCButton.addEventListener('click', function (event) {
                                        event.preventDefault();
                                        var inputValue = cInputField.value;

                                        if (inputValue.trim() !== '' && selectedContactType !== '') {
                                            addContactInfo(selectedContactType, inputValue);
                                            cInputField.value = '';
                                            selectedContactType = '';
                                            contactDropDown.textContent = 'Välj kontakttyp';
                                        }
                                    });

                                    function addContactInfo(type, info) {
                                        var listItem = document.createElement('li');
                                        listItem.className = 'list-group-item list-group-item-primary';
                                        listItem.textContent = type + ": " + info;

                                        var hiddenTypeInput = createHiddenInput(type, 'Type');
                                        var hiddenInfoInput = createHiddenInput(info, 'Info');
                                        listItem.appendChild(hiddenTypeInput);
                                        listItem.appendChild(hiddenInfoInput);

                                        var removeButton = createRemoveButton(listItem);
                                        listItem.appendChild(removeButton);

                                        contactinfo.appendChild(listItem);

                                        updateContactIndexes();
                                    }

                                    function createHiddenInput(value, name) {
                                        var hiddenInput = document.createElement('input');
                                        hiddenInput.type = 'hidden';
                                        hiddenInput.value = value;
                                        hiddenInput.name = `ContactInfos[${contactIndex}].${name}`;
                                        return hiddenInput;
                                    }

                                    function createRemoveButton(item) {
                                        var removeButton = document.createElement('button');
                                        removeButton.textContent = 'Ta bort';
                                        removeButton.className = 'btn btn-outline-danger btn-sm float-end';
                                        removeButton.addEventListener('click', function () {
                                            item.remove();
                                            updateContactIndexes();
                                        });
                                        return removeButton;
                                    }

                                    function updateContactIndexes() {
                                        contactIndex++;
                                        var allContacts = contactinfo.querySelectorAll('li');
                                        allContacts.forEach(function (item, index) {
                                            var typeInput = item.querySelector('input[name*=".Type"]');
                                            var infoInput = item.querySelector('input[name*=".Info"]');
                                            if (typeInput && infoInput) {
                                                typeInput.name = `ContactInfos[${index}].Type`;
                                                infoInput.name = `ContactInfos[${index}].Info`;
                                            }
                                        });
                                    }
                                });

                                function removeContact(button) {
                                    button.parentElement.remove();
                                    updateContactIndexes(); // Update index after removal
                                }
                            </script>

                        </div>



                        <!--Beskrivning-->
                        <div class="form-floating mt-4">
                            <textarea asp-for="Information" class="form-control" placeholder="Input description here"></textarea>
                            <label asp-for="Information" class="form-label">Kort beskrivning om dig:</label>
                            <span asp-validation-for="Information" class="text-danger"></span>
                        </div>

                        <!--Utbildning-->
                        <div class="form-floating mt-4">
                            <h5>Utbildning</h5>
                            <div class="input-group">
                                <div class="form-floating w-50">
                                    <input type="text" class="form-control" id="schoolInput" placeholder="Skola/Universitet">
                                    <label for="schoolInput" class="form-label">Skola/Universitet</label>
                                </div>
                                <div class="form-floating w-50">
                                    <input type="text" class="form-control" id="typeInput" placeholder="Typ av utbildning">
                                    <label for="typeInput" class="form-label">Typ av utbildning</label>
                                </div>
                            </div>
                            <div class="input-group">
                                <input type="number" class="form-control" id="fromInput" placeholder="Från" min="1900" max="2099">
                                <input type="number" class="form-control" id="toInput" placeholder="Till" min="1900" max="2099">
                                <button class="btn btn-outline-primary" id="addSchoolButton">Lägg till</button>
                            </div>
                            <div id="educationErrorMessage" class="text-danger"></div>
                            <div id="educationFormatErrorMessage" class="text-danger"></div>
                            <ul class="list-group mt-2" id="schoolList">
                                @if (Model.Educations != null && Model.Educations.Any())
                                {
                                    var educationIndex = 0; // Lägg till en räknare för att hålla reda på index
                                    foreach (var education in Model.Educations)
                                    {
                                        <li class="list-group-item list-group-item-primary">
                                            <div>
                                                @education.School
                                            </div>
                                            <div>
                                                @education.Type
                                            </div>
                                            <div>
                                                @education.From - @education.To
                                            </div>
                                            <button class="btn btn-outline-danger btn-sm float-end" onclick="removeEducation(this)">Ta bort</button>
                                            <input type="hidden" name="Educations[@educationIndex].School" value="@education.School" />
                                            <input type="hidden" name="Educations[@educationIndex].Type" value="@education.Type" />
                                            <input type="hidden" name="Educations[@educationIndex].From" value="@education.From" />
                                            <input type="hidden" name="Educations[@educationIndex].To" value="@education.To" />
                                        </li>
                                        educationIndex++;
                                    }
                                }

                            </ul>

                        </div>

                        <script>
                            document.addEventListener('DOMContentLoaded', function () {
                                var educationIndex = 0;
                                var addSchoolButton = document.getElementById('addSchoolButton');
                                var schoolInput = document.getElementById('schoolInput');
                                var typeInput = document.getElementById('typeInput');
                                var fromInput = document.getElementById('fromInput');
                                var toInput = document.getElementById('toInput');
                                var schoolList = document.getElementById('schoolList');
                                var educationErrorMessage = document.getElementById('educationErrorMessage'); // Lägg till detta
                                var educationFormatErrorMessage = document.getElementById('educationFormatErrorMessage');

                                addSchoolButton.addEventListener('click', function (event) {
                                    event.preventDefault();

                                    var schoolValue = schoolInput.value;
                                    var typeValue = typeInput.value;
                                    var fromValue = parseInt(fromInput.value);
                                    var toValue = toInput.value ? parseInt(toInput.value) : null;

                                    // Dölj tidigare felmeddelanden
                                    educationErrorMessage.textContent = "";
                                    educationErrorMessage.style.display = 'none'; // Dölj felmeddelandet
                                    educationFormatErrorMessage.textContent = "";
                                    educationFormatErrorMessage.style.display = 'none'; // Dölj felmeddelandet

                                    if (schoolValue.trim() !== '' && typeValue.trim() !== '' && !isNaN(fromValue) && !isNaN(toValue)) {
                                        // Kontrollera formatet på årtalen
                                        var validFromYear = isValidYearFormat(fromValue.toString());
                                        var validToYear = isValidYearFormat(toValue !== null ? toValue.toString() : '');

                                        if (!validFromYear || !validToYear) {
                                            // Visa felmeddelande för ogiltigt årtalsformat
                                            educationFormatErrorMessage.textContent = "Ogiltigt format! Ange ett giltigt årtal.";
                                            educationFormatErrorMessage.style.display = 'block';
                                            return;
                                        }

                                        if (toValue !== null && toValue < fromValue) {
                                            // Visa felmeddelande för otillåtet intervall
                                            educationErrorMessage.textContent = "'Från'-årtalet får inte vara mindre än 'Till'-årtalet.";
                                            educationErrorMessage.style.display = 'block';
                                            return;
                                        }

                                        // Lägg till utbildningsinformation och återställ inputfälten
                                        addEducationInfo(schoolValue, typeValue, fromValue, toValue);
                                        resetInputFields();
                                    }

                                });

                                function addEducationInfo(school, type, from, to) {
                                    var listItem = document.createElement('li');
                                    listItem.className = 'list-group-item list-group-item-primary';

                                    var textContent = document.createElement('div');
                                    textContent.innerHTML = `<div>${school}</div><div>${type}</div><div>${from} - ${to}</div>`;

                                    listItem.appendChild(textContent);

                                    // Skapa dolda input-fält
                                    var hiddenSchoolInput = createHiddenInput(school, 'School');
                                    var hiddenTypeInput = createHiddenInput(type, 'Type');
                                    var hiddenFromInput = createHiddenInput(from, 'From');
                                    var hiddenToInput = createHiddenInput(to, 'To');

                                    listItem.appendChild(hiddenSchoolInput);
                                    listItem.appendChild(hiddenTypeInput);
                                    listItem.appendChild(hiddenFromInput);
                                    listItem.appendChild(hiddenToInput);

                                    // Lägg till Ta bort-knapp
                                    var removeButton = createRemoveButton(listItem);
                                    listItem.appendChild(removeButton);

                                    schoolList.appendChild(listItem);

                                    // Uppdatera index för utbildning
                                    updateEducationIndexes();
                                }

                                function createHiddenInput(value, name) {
                                    var hiddenInput = document.createElement('input');
                                    hiddenInput.type = 'hidden';
                                    hiddenInput.value = value;
                                    hiddenInput.name = `Educations[${educationIndex}].${name}`;
                                    return hiddenInput;
                                }

                                function createRemoveButton(item) {
                                    var removeButton = document.createElement('button');
                                    removeButton.textContent = 'Ta bort';
                                    removeButton.className = 'btn btn-outline-danger btn-sm float-end';
                                    removeButton.addEventListener('click', function () {
                                        item.remove();
                                        updateEducationIndexes();
                                    });
                                    return removeButton;
                                }

                                function resetInputFields() {
                                    schoolInput.value = '';
                                    typeInput.value = '';
                                    fromInput.value = '';
                                    toInput.value = '';
                                }

                                function updateEducationIndexes() {
                                    educationIndex++;
                                    var allEducations = schoolList.querySelectorAll('li');
                                    allEducations.forEach(function (item, index) {
                                        var schoolInput = item.querySelector('input[name*=".School"]');
                                        var typeInput = item.querySelector('input[name*=".Type"]');
                                        var fromInput = item.querySelector('input[name*=".From"]');
                                        var toInput = item.querySelector('input[name*=".To"]');
                                        if (schoolInput && typeInput && fromInput && toInput) {
                                            schoolInput.name = `Educations[${index}].School`;
                                            typeInput.name = `Educations[${index}].Type`;
                                            fromInput.name = `Educations[${index}].From`;
                                            toInput.name = `Educations[${index}].To`;
                                        }
                                    });
                                }

                                function isValidYearFormat(year) {
                                    return /^(19|20)\d{2}$/.test(year);
                                }
                            });
                            function removeEducation(button) {
                                button.parentElement.remove();
                                updateEducationIndexes();
                            }
                        </script>




