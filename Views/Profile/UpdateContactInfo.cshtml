@model MittClick.Models.ViewModels.UpdateContactInfoViewModel

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>Uppdatera kontaktuppgifter</h4>
                    </div>

                    <div class="card-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <input type="radio" name="btnradio" id="btnradio1" autocomplete="off" checked data-value="Email">
                                    <label class="btn btn-outline-primary" for="btnradio1">Email</label>

                                    <input type="radio" name="btnradio" id="btnradio2" autocomplete="off" data-value="Telefon">
                                    <label class="btn btn-outline-primary" for="btnradio2">Telefon</label>

                                    <input type="radio" name="btnradio" id="btnradio3" autocomplete="off" data-value="Annat">
                                    <label class="btn btn-outline-primary" for="btnradio3">Annat</label>
                                </div>
                            </div>
                            <input type="text" id="inputNewContactInfo" />
                            <a href="javascript:void(0);" onclick="addContactInfo(document.getElementById('inputNewContactInfo').value)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
                                </svg>
                            </a>
                        </div>

                        <dl class="list-group list-group-flush">
                            @foreach (var contact in Model.ContactInfos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <dt class="col-sm-3">@contact.Type:</dt>
                                    <dd class="col-sm-9">@contact.Info</dd>
                                    <a class="mb-0" style="line-height: 1;" href="javascript:void(0);" onclick="deleteContactInfo('@contact.Id')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Red" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                        </svg>
                                    </a>
                                </li>
                            }
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/Contact.js"></script>
</body>
