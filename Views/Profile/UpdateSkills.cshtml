@model List<Skill>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>Uppdatera färdigheter</h4>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <h5>Lägg till ny</h5>
                            <form asp-action="AddSkill" asp-controller="Profile">
                                <input type="text" />
                                <button type="submit">
                                @* <a type="Submit"> *@
                                    <!--Byt till lägg-till-->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                                    </svg>
                                @* </a> *@
                                </button>
                            </form>
                        </div>
                        <ul class="list-group list-group-flush">

                            @foreach (var skill in Model)
                            {
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">

                                        <p class="mt-3">@skill.Name</p>
                                        <a asp-action="RemoveSkill" asp-controller="Profile" asp-route-id="@skill.Name">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x-circle" viewBox="0 0 16 16">
                                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708" />
                                            </svg>
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

