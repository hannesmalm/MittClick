@model MittClick.Models.ViewModels.UpdateWorkExperienceViewModel
<!DOCTYPE html>
<html>
<head>
    <title>EditWorkExperience</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>Uppdatera arbetserfarenheter</h4>
                    </div>

                    <div class="card-body">
                            <div class="input-group">
                                <div class="form-floating w-50">
                                    <input type="text" class="form-control" id="workplaceInput" placeholder="Arbetsgivare">
                                    <label for="workplaceInput" class="form-label">Arbetsgivare</label>
                                </div>
                                <div class="form-floating w-50">
                                    <input type="text" class="form-control" id="roleInput" placeholder="Arbetsroll">
                                    <label for="roleInput" class="form-label">Arbetsroll</label>
                                </div>
                            </div>
                            <div class="input-group">
                                <input type="number" class="form-control" id="startInput" placeholder="Från" min="1900" max="2099" style="width: 40%;">
                                <input type="number" class="form-control" id="endInput" placeholder="Till" min="1900" max="2099" style="width: 40%;">
                                <button type="button" class="btn btn-outline-primary" id="addWorkButton" style="width: 20%;">Lägg till</button>
                            </div>

                        <div id="workErrorMessage" class="text-danger"></div>
                        <div id="formatErrorMessage" class="text-danger"></div>
                        <ul class="list-group list-group-flush">
                                @foreach (var workExperience in Model.WorkExperiences)
                                {
                                    <li class="list-group-item list-group-item-primary">
                                        <div>@workExperience.Workplace</div>
                                        <div>@workExperience.Role</div>
                                        <div>@workExperience.From - @workExperience.To</div>
                                    <a class="mb-0" style="line-height: 1;" href="javascript:void(0);" onclick="deleteWork('@workExperience.Id')">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="Red" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                        </svg>
                                    </a>
                                </li>
                                }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/WorkExp.js"></script>
</body>
</html>