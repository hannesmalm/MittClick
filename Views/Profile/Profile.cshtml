@model MittClick.Models.Profile

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <div class="row">

        <div class="col-md-4">
            <div class="card mb-3">
                @if (Model.ProfileImage != null)
                {
                    var imageBase64 = Convert.ToBase64String(Model.ProfileImage);
                    var imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img class="img rounded-circle m-2" style="aspect-ratio: 1/1; object-fit: cover;" src="@imageSrc" alt="Profile Image">
                }
                else
                {
                    <img class="img mx-4" src="groupImg.png" alt="Card image cap">
                }

                <div class="card-body">
                    <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
                    <p style="color: gray;">@Model.UserName</p>
                    <p class="card-text">@Model.Information</p>
                    <div class="text-center">
                        <a href="#" class="btn btn-primary">Skicka meddelande</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Kontaktinfo</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Namn:</dt>
                        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                        <thead>
                            <tr>
                                <th>Kontakt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contactItem in Model.ContactInfos)
                            {
                                <tr>
                                    <td>@contactItem.Type</td>
                                    <td>@contactItem.Info</td>
                                </tr>
                            }
                        </tbody>
                    </dl>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title">Projekt</h5>
                </div>
                <div class="card-body d-flex flex-wrap justify-content-center">
                    <!-- Projektinformation här -->
                </div>
            </div>
        </div>
    </div>
</div>
