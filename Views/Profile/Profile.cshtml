@model UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
    var currentUserName = User.Identity.Name;
}

@if (currentUserName == Model.UserName)
{
    <a asp-action="Edit" asp-controller="Profile" class="btn btn-primary mt-3 mb-3">Redigera profil</a>
}

<div class="container mt-4">
    <div class="row">

        <div class="col-md-4">
            <div class="card mb-3">
                @if (Model.ProfileImage != null)
                {
                    var imageBase64 = Convert.ToBase64String(Model.ProfileImage);
                    var imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img class="img rounded-circle m-5" style="aspect-ratio: 1/1; object-fit: cover;" src="@imageSrc" alt="Profile Image">
                }
                else
                {
                    <img class="img rounded-circle m-5" style="aspect-ratio: 1/1; object-fit: cover;" src="~/lib/image/defaultprofileimg.jpg" alt="Default Profile Image">
                }

                <div class="card-body">
                    <h2 class="card-title">@Model.FirstName @Model.LastName</h2>
                    <p style="color: gray;">@Model.UserName</p>
                    <p class="card-text">@Model.Information</p>
                    <div class="text-center">

                        @if (currentUserName != Model.UserName)
                        {
                            <a href="#" class="btn btn-primary">Skicka meddelande</a>
                        }

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Kontaktinfo</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Namn:</dt>
                        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">------------</dd>

                        <dt class="col-sm-3">Tel:</dt>
                        <dd class="col-sm-9">------------</dd>

                        <dt class="col-sm-3">Adress:</dt>
                        <dd class="col-sm-9">------------</dd>

                        <!-- Vi kan loopa genom en lista med kontaktinfo sen för att slippa tomma fält -->

                    </dl>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title">Projekt</h5>
                </div>
                <div class="card-body d-flex flex-wrap justify-content-center">
                    
                    <div class="container">
                        <div class="row">
                            @foreach (var project in Model.UserProjects)
                            {
                                <div class="col-md-4 col-sm-6">
                                    <div class="card">
                                        <img class="card-img-top" src="@project." alt="Projekt bild">
                                        <div class="card-body">
                                            <h5 class="card-title">@project.Title</h5>
                                            <p class="card-text">@project.Summary</p>
                                            <a href="@Url.Action("Project", "Project", new { projectId = project.ProjectId}) class="btn btn-primary">Läs Mer</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>


