@using System.Security.Claims
@model UserProfileViewModel


@{
    ViewData["Title"] = "Profile";
    var currentUserName = User.Identity.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3">
                @if (Model.ProfileImage != null)
                {
                    var imageBase64 = Convert.ToBase64String(Model.ProfileImage);
                    var imageSrc = $"data:image/png;base64,{imageBase64}";
                    <img class="img rounded-circle m-4" style="aspect-ratio: 1/1; object-fit: cover;" src="@imageSrc" alt="Profile Image">
                }
                else
                {
                    <img class="img rounded-circle m-5" style="aspect-ratio: 1/1; object-fit: cover;" src="~/lib/image/defaultprofileimg.jpg" alt="Default Profile Image">
                }

                <div class="card-body">
                    <h2 class="card-title">@Model.FirstName @Model.LastName</h2>
                    <p style="color: gray;">@Model.UserName</p>
                    <p class="card-text">@Model.Information</p>
                    <div class="text-center">

                        @if (currentUserName != Model.UserName)
                        {
                            var currentUserId = User?.FindFirst(ClaimTypes.NameIdentifier)?.Value;

                            <a href="@Url.Action("SendMessage", "Message", new { reciever = Model.UserId, sender = currentUserId })" class="btn btn-success mb-2">Skicka meddelande</a>
                        }

                        @if (currentUserName == Model.UserName)
                        {
                            <a asp-action="Edit" asp-controller="Profile" class="btn btn-primary mt-3 mb-3">Redigera profil</a>
                        }

                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    <h5>Färdigheter</h5>
                </div>
                <div class="card-body">
                    @foreach (var skill in Model.Skills)
                    {
                        <span class="badge bg-secondary">@skill.Name</span>
                    }
                </div>
            </div>
        </div>
        </div>

        <dv class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Kontaktinfo</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Namn:</dt>
                        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

                        @foreach (var contactInfo in Model.ContactInfos)
                        {
                            <dt class="col-sm-3">@contactInfo.Type:</dt>
                            <dd class="col-sm-9">@contactInfo.Info</dd>
                        }
                    </dl>
                </div>
            </div>

            <div class="row">
                <!--Utbildning-->
                <div class="col-md-6">
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5>Utbildning</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var education in Model.Educations)
                            {
                                <p><strong>@education.School</strong> (@education.Type, @education.From - @education.To)</p>
                            }
                        </div>
                    </div>
                </div>

                <!--Arbete-->
                <div class="col-md-6">
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5>Arbetserfarenhet</h5>
                        </div>
                        <div class="card-body">
                            @foreach (var experience in Model.WorkExperiences)
                            {
                                <p><strong>@experience.Role</strong> at @experience.Workplace (@experience.From - @experience.To)</p>
                            }
                        </div>
                    </div>
                </div>
            </div>


            <!--Projekt-->
            <div class="card mt-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Projekt</h5>
                    <a asp-action="Add" asp-controller="Project" class="icon-link" data-bs-toggle="tooltip" data-bs-placement="top" title="Lägg till nytt projekt">
                        <!-- Ikon -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="green" class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                        </svg>
                    </a>
                </div
                <div class="card-body d-flex flex-wrap justify-content-center">
                    <div class="container">
                        <div class="row">

                            <!--Loopa igenom projekt-->
                            @foreach (var project in Model.UserProjects)
                            {
                                <div class="col-md-4 col-sm-6">
                                    <div class="card">
                                        @if (project.ProjectImage != null)
                                        {
                                            var imageBase64 = Convert.ToBase64String(project.ProjectImage);
                                            var imageSrc = $"data:image/png;base64,{imageBase64}";
                                            <img class="card-img-top" src="@imageSrc" alt="Project Image">
                                        }
                                        <div class="card-body">
                                            <h5 class="card-title text-center">@project.Title</h5>
                                            <p class="card-text">@project.Summary</p>
                                            <div class="d-flex justify-content-center">
                                                <form asp-controller="Project" asp-action="Project" method="get">
                                                    <input type="hidden" name="projectId" value="@project.ProjectId" />
                                                    <button type="submit" class="btn btn-primary">Läs Mer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>