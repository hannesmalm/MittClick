    <table class="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Profile Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userProfile in Model)
            {
                <tr>
                    <td>@userProfile.UserName</td>
                    <td>
                        @if (userProfile.HasProfile)
                        {
                            <a href="@Url.Action("Profile", "Profile", new { userId = userProfile.UserId })">View Profile</a>
                        }
                        else
                        {
                            <span>No Profile</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

