@model List<MittClick.Models.Message>

@{
    ViewData["Title"] = "Inbox";
}

<div class="container mt-4">
    <h2>Inbox</h2>

    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Från</th>
                    <th>Ämne</th>
                    <th>Meddelande</th>
                    <th>Status</th>
                    <th>Åtgärder</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>@message.SenderName</td>
                        <td>@message.Text</td>
                        <td>@(message.IsRead ? "Läst" : "Oläst")</td>
                        <td>
                            <a asp-action="MarkAsRead" asp-controller="Message" asp-route-messageId="@message.MessageId" class="btn btn-primary">Markera som läst</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Din inkorg är tom.</p>
    }
</div>
