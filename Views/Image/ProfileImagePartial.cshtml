@* @model Profile

@{
    var profileImagePath = "~/lib/image/defaultprofileimg.jpg";
    if (Model?.Profile?.ProfileImage != null)
    {
        var base64Image = Convert.ToBase64String(Model.Profile.ProfileImage);
        profileImagePath = $"data:image/png;base64,{base64Image}";
    }
}

<img src="@profileImagePath" alt="Profile Image" class="img rounded-circle" style="aspect-ratio: 1/1; object-fit: cover;" />
 *@